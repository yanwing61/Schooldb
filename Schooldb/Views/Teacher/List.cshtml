@model IEnumerable<Schooldb.Models.Teacher>
@{
    ViewBag.Title = "List";
}

<div id="containerlist">
    <h2>List of Teachers</h2>

    <p>There are @Model.Count() teachers.</p>
    <a href="/Teacher/New">Add a new teacher</a>

    <form action="/Teacher/List" method="GET">
        <input type="text" name="SearchKey" autocomplete="off" placeholder="Search with teancher's name" />
        <input type="submit" value="Search" />
    </form>

    @foreach (var teacher in Model)
    {
        <div class="listitem row">
            <div class="col-md-12" id="namelist"><a href="/Teacher/Show/@teacher.TeacherId">@teacher.TeacherFname @teacher.TeacherLname</a></div>
        </div>
    }
</div>
