@model Schooldb.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<a class="navlink" href="/Teacher/List">Back To list of Teachers</a>
<br />
<a class="dellink" href="/Teacher/DeleteConfirm/@Model.TeacherId">Delete this teacher</a>
<br />
<a class="updatelink" href="/Teacher/Update/@Model.TeacherId">Update this teacher</a>

<div id="containershow">
    <h2>Name: @Model.TeacherFname @Model.TeacherLname</h2>
    <p>ID: @Model.TeacherId</p>
    <p>Employee Number: @Model.TeacherEmployeeNumber</p>
    <p>Hire date: @Model.TeacherHiredate</p>
    <p>Salary: @Model.TeacherSalary</p>

    <p>
        Courses taught by this teacher: <br />
        @Model.ClassCode  @Model.ClassName <br />

    </p>
   
</div>


